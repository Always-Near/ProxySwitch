{
  "name": "ProxySwitch",
  "description": "Proxy Switch",
  "version": "0.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "permissions": [
    "storage",
    "offscreen",
    "alarms",
    "tabs"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "/assets/*",
        "/styles/*",
        "/fonts/*"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}